@model SmartEmployeeSystem.Models.UserModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center mb-4">Register</h2>
            <hr />

            @* Email already exist error *@
            @if (ViewBag.msg != null)
            {
                <div class="alert alert-danger">@ViewBag.msg</div>
            }

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label>Username</label>
                    <input asp-for="username" class="form-control" type="text" />
                </div>
                <div class="mb-3">
                    <label>Email</label>
                    <input asp-for="email" class="form-control" type="email" />
                </div>
                <div class="mb-3">
                    <label>Password</label>
                    <input asp-for="password_hash" class="form-control" type="password" />
                </div>
                <button type="submit" class="btn btn-success w-100">Register</button>
                <p class="text-center mt-3">
                    Already registered? 
                    <a asp-action="Login">Login here</a>
                </p>
            </form>
        </div>
    </div>
</div>
